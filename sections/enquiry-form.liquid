{% style %}
  .enquiry-sec .section{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .enquiry-sec .inner-wrapper {
    display: flex;
    gap: 50px;
    justify-content: center;
    width: 100%;
    max-width: 1000px;
    margin: auto;
  }
  .enquiry-sec .inner-wrapper .image-wrapper,
  .enquiry-sec .inner-wrapper .form-wrapper {
    width: 50%;
  }
  .enquiry-sec .section-heading .heading {
    font-weight: 700;
    font-size: 30px;
    line-height: 45px;
    color: #474747;
    margin-bottom: 30px;
    text-align: center;
  }
  .enquiry-sec .inner-wrapper .image-wrapper img {
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 5px 5px #63636e33;
  }
{% endstyle %}


<div class="section">
    <div class="section-heading">
        {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}
    </div>   
    <div class="inner-wrapper">
        {% if section.settings.image != blank %}
        <div class="image-wrapper">
            {{ section.settings.image | image_url: width: 1000 | image_tag  }}
        </div>
        {% endif %}
        <div class="form-wrapper">
            {% render 'enquiry-form' %}                
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Enquiry Form",
    "tag": "section",
    "class": "enquiry-sec",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Dimension should be 1000 x 1000, jpg"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Space top",
            "min": 0,
            "max": 100,
            "unit": "px",
            "step": 2,
            "default": 48
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Space bottom",
            "min": 0,
            "max": 100,
            "unit": "px",
            "step": 2,
            "default": 48
        }
    ],
    "presets": [
        {
            "name": "Enquiry Form"
        }
    ]
}
{% endschema %}