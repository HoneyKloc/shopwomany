<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}">
    {% if section.settings.banner != blank %}
    <div class="banner-wrapper">
        <div class="hero-banner lg">
            {{ section.settings.banner | image_url: width: '2763' | image_tag  }}
        </div>
        {% if section.settings.mobile_banner != blank %}
        <div class="hero-banner sm">
            {{ section.settings.mobile_banner | image_url: width: '768' | image_tag  }}
        </div>
        {% endif %}
    </div>
    {% endif %}
    <div class="collection-title">
        <h1>{{ section.settings.title }}</h1>
    </div>
</div>

{% schema %}

{
    "name": "Hero banner",
    "tag": "section",
    "class": "hero-banner-section",
    "settings": [
        {
        "type": "header",
        "content": "t:content.section_layout"
        },
        {
            "type": "select",
            "id": "section_width",
            "label": "t:settings.width",
        "options": [
            {
                "value": "page-width",
                "label": "t:options.page"
            },
            {
                "value": "full-width",
                "label": "t:options.full"
            }
        ],
        "default": "page-width"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        },
        {
            "type": "image_picker",
            "id": "banner",
            "label": "Image",
            "info": "Dimension should be 2763x984, jpg"
        },
        {
            "type": "image_picker",
            "id": "mobile_banner",
            "label": "Mobile Image",
            "info": "Dimension should be 768x900, jpg"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "name": "Hero banner"
        }
    ]
}

{% endschema %}