    }

    .ai-collection-card-count-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_count_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-collection-carousel-slide-{{ ai_gen_id }} {
      width: 100%;
    }
  }
